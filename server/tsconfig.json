{
  "compilerOptions": {
    "target": "ES6",                          
    "module": "CommonJS",                     
    "rootDir": "./src",                       
    "outDir": "./dist",                       
    "strict": true,                           
    "esModuleInterop": true,                  
    "forceConsistentCasingInFileNames": true, 
    "skipLibCheck": true,                     
    "resolveJsonModule": true,                
    "moduleResolution": "node",               
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src"                // âœ… Add this line
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
